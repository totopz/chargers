<% content_for :title, "Editing Location" %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2 class="mb-0">Edit Location</h2>
    </div>
    <div class="card-body">
      <%= render "form", location: @location %>
    </div>
  </div>

  <div class="d-flex gap-2 mt-3">
    <%= link_to "Show this location", admin_location_path(@location), class: "btn btn-info" %>
    <%= link_to "Back to locations", admin_locations_path, class: "btn btn-secondary" %>
  </div>
</div>
