<% content_for :title, "Show Location" %>

<div class="card mb-4">
  <div class="card-body">
    <h4 class="card-title mb-3"><%= @location.title %></h4>
    <p class="card-text"><strong>Latitude:</strong> <%= @location.latitude %></p>
    <p class="card-text"><strong>Longitude:</strong> <%= @location.longitude %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Edit this location", edit_admin_location_path(@location), class: "btn btn-warning" %>
  <%= link_to "Back to locations", admin_locations_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this location", admin_location_path(@location), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
