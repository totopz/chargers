<% content_for :title, "Locations" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Locations</h1>
    <%= link_to "New Location", new_admin_location_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Latitude</th>
          <th scope="col">Longitude</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= location.title %></td>
            <td><%= location.latitude %></td>
            <td><%= location.longitude %></td>
            <td class="text-end">
              <%= link_to "Show", admin_location_path(location), class: "btn btn-info btn-sm me-1" %>
              <%= link_to "Edit", edit_admin_location_path(location), class: "btn btn-warning btn-sm me-1" %>
              <%= link_to "Delete", admin_location_path(location), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
