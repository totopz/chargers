<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Charger Details</h4>
    </div>
    <div class="card-body">
      <p><strong>Title:</strong> <%= @charger.title %></p>
      <p><strong>Description:</strong> <%= @charger.description %></p>
      <p><strong>Location:</strong> <%= @charger.location&.title || "N/A" %></p>

      <div class="mt-3">
        <strong>Plug Types:</strong>
        <% if @charger.plugs.any? %>
          <ul class="list-group list-group-flush mt-2">
            <% @charger.plugs.each do |plug| %>
              <li class="list-group-item">
                <%= plug.plug_type.name %> â€” <strong><%= plug.speed %> kW</strong>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mt-2">No plugs available.</p>
        <% end %>
      </div>
    </div>
    <div class="card-footer text-end">
      <%= link_to "Back", admin_chargers_path, class: "btn btn-secondary me-2" %>
      <%= link_to "Edit", edit_admin_charger_path(@charger), class: "btn btn-warning me-2" %>
      <%= link_to "Delete", admin_charger_path(@charger), method: :delete,
                  data: { confirm: "Are you sure you want to delete this charger?" },
                  class: "btn btn-danger" %>
    </div>
  </div>
</div>
